<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/workList_listView_selected_end" android:startColor="@color/workList_listView_selected_start" />
            <size android:width="320dp" android:height="60dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/workList_listView_pressed_end" android:startColor="@color/workList_listView_pressed_start" />
            <size android:width="320dp" android:height="60dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/workList_listView_start" android:startColor="@color/workList_listView_end" />
            <size android:width="320dp" android:height="60dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>