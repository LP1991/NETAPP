<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

 	<LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/worklist_title" />

    </LinearLayout>

    <com.cloudvision.tanzhenv2.order.deal.refresh.PullToRefreshLayout
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/refresh_head" />
    <!-- 支持所有实现Pullable接口的View -->

    <com.cloudvision.tanzhenv2.order.deal.refresh.PullableListView
        android:id="@+id/lv_workList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false" />

    </com.cloudvision.tanzhenv2.order.deal.refresh.PullToRefreshLayout> 
   
    <FrameLayout
        android:id="@+id/fm_workList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="FvRefresh"
        android:visibility="gone">

        <ImageView
            android:id="@+id/tv_workList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/base_empty_view" />

    </FrameLayout>

</LinearLayout>