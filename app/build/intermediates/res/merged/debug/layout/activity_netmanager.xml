<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
 	<LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include layout="@layout/user_title"/>

    </LinearLayout>
    
 	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        >
        <LinearLayout 
            android:id="@+id/macInput"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
			android:weightSum="1">
            <EditText
            android:id="@+id/macAdress"
    	  	android:layout_width="200dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="10dp" 
    		android:textSize="18dp"
    		android:gravity="left"
    		android:hint="输入MAC地址"
    		android:textColor="@color/font_color_black"
				android:layout_weight="0.14" />
            <Button
            android:id="@+id/scanMacBtn"
    	  	android:layout_width="52dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="10dp"
			android:textSize="15dp"
    		android:gravity="center"
			android:background="@drawable/actionbar_search_icon"
    		android:textColor="@color/font_color_black"/>
        </LinearLayout>
    </LinearLayout>
    
 	<LinearLayout
        android:id="@+id/net_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_corner_bg"
        >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            >
            <TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5dp"
    		android:text="终端设备"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
            <Button
            android:id="@+id/more1"
    	  	android:layout_width="wrap_content"
    		android:layout_height="40dp"
    		android:layout_marginLeft="120dp"
    		android:text="更多"  
    		android:textSize="14dp"
    		android:gravity="center"
    		android:textColor="@color/font_color_black"
    	    />
        </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="140dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="MAC:"  
    		android:textSize="13dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/end_mac"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="13sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp" 
    	android:layout_marginBottom="5dp"   
    	>
    	<TextView 
    	  	android:layout_width="140dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="版本信息:"  
    		android:textSize="13dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/end_version"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="13sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    </LinearLayout>
    </LinearLayout>
    
 	<LinearLayout
        android:id="@+id/net_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/layout_corner_bg"
        >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            >
            <TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5dp"
    		android:text="局端设备"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
            <Button
            android:id="@+id/more2"
    	  	android:layout_width="wrap_content"
    		android:layout_height="40dp"
    		android:layout_marginLeft="120dp"
    		android:text="更多"  
    		android:textSize="14dp"
    		android:gravity="center"
    		android:textColor="@color/font_color_black"
    	    />
        </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="140dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="局端名称:"  
    		android:textSize="13dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_name"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="13sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp" 
    	android:layout_marginBottom="5dp"   
    	>
    	<TextView 
    	  	android:layout_width="140dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="管理IP:"  
    		android:textSize="13dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_ip"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="13sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    </LinearLayout>
    </LinearLayout>
    
 	<LinearLayout
        android:id="@+id/net_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/layout_corner_bg"
        >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            >
            <TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5dp"
    		android:text="链路信息"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
            <Button
            android:id="@+id/more3"
    	  	android:layout_width="wrap_content"
    		android:layout_height="40dp"
    		android:layout_marginLeft="120dp"
    		android:text="更多"  
    		android:textSize="14dp"
    		android:gravity="center"
    		android:textColor="@color/font_color_black"
    	    />
        </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="140dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="上下行RSSI(高频):"  
    		android:textSize="13dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/link_rssi"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="13sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp" 
    	android:layout_marginBottom="5dp"   
    	>
    	<TextView 
    	  	android:layout_width="140dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="上下行物理速率:"  
    		android:textSize="13dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/link_speed"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="13sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    </LinearLayout>
    </LinearLayout>
    
 	<LinearLayout
        android:id="@+id/net_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/layout_corner_bg"
        >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            >
            <TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5dp"
    		android:text="严重告警信息"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
            <Button
            android:id="@+id/more4"
    	  	android:layout_width="wrap_content"
    		android:layout_height="40dp"
    		android:layout_marginLeft="120dp"
    		android:text="更多"  
    		android:textSize="14dp"
    		android:gravity="center"
    		android:textColor="@color/font_color_black"
    	    />
        </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
            <ListView  
        	android:id="@+id/warning_list"  
        	android:layout_width="match_parent"  
        	android:layout_height="fill_parent" >  
    		</ListView>

    	</LinearLayout>

    </LinearLayout>
    
</LinearLayout>