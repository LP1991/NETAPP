<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="2dp" >

	    <LinearLayout
	        android:id="@+id/ssid_ll"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal" 
			android:gravity="center_vertical">
	        
	        <TextView
	            android:id="@+id/ssid_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/wifi_list_padding"
				android:textColor="@color/font_color_black"
				android:text="ssid"
				android:textSize="18sp" />
			
			<TextView
				android:id="@+id/bssid_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/wifi_list_padding"
				android:textColor="@color/line_color"
				android:text="bssid"
				android:textSize="12sp" />
	        
	    </LinearLayout>
	    
		<TextView
			android:id="@+id/pwd_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/ssid_ll"
			android:padding="@dimen/wifi_list_padding"
			android:text="" />

		<TextView
			android:id="@+id/channel_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/ssid_ll"
			android:padding="@dimen/wifi_list_padding"
			android:textColor="@color/font_color_black2" />
		

		<TextView
			android:id="@+id/level_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/ssid_ll"
			android:layout_toRightOf="@id/channel_tv"
			android:padding="@dimen/wifi_list_padding"
			android:textColor="@color/font_color_black2"
			android:text="" />

		<TextView
			android:id="@+id/encrypt_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/ssid_ll"
			android:layout_toRightOf="@id/level_tv"
			android:padding="@dimen/wifi_list_padding"
			android:textColor="@color/font_color_black2"
			android:text="WPA" />

		<TextView
			android:id="@+id/connect_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:padding="@dimen/wifi_list_padding"
			android:textColor="@color/font_color_black2"
			android:text="已连接" />
	</RelativeLayout>

</LinearLayout>