<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/net_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/layout_corner_bg"
        >
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            >
            <TextView 
    	  	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5dp"
    		android:text="局端设备"  
    		android:textSize="15dp"
    		android:gravity="center"
    		android:textColor="@color/font_color_black"
    	    />
        </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="局端名称:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_host"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="管理IP:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_ip"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="版本信息:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_version"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="子网掩码:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_mask"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="网关:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_gateway"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="管理VLAN:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_vlan"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:layout_marginTop="5dp"  
    	>
    	<TextView 
    	  	android:layout_width="100dp"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="20dp"
    		android:text="运行时间:"  
    		android:textSize="15dp"
    		android:gravity="left"
    		android:textColor="@color/font_color_black"
    	    />
    	<TextView 
                android:id="@+id/head_pop_runtime"
    			android:layout_width="match_parent"
        		android:layout_height="wrap_content"
    			android:layout_marginLeft="10dp"
    			android:textColor="@color/font_color_black"
    			android:textSize="15sp"
    			android:text=""
    			android:singleLine="true"
    			android:ellipsize="end"
    			android:layout_gravity="center_horizontal"
                />
    	</LinearLayout>
    	
    	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:textSize="14dip"
            android:textColor="@color/font_color_black"
            android:text="返回"
            />
    	</RelativeLayout>

 
    	</LinearLayout>
 

</LinearLayout>